# --- Networking ---
# Per-request timeout (ms)
BEVSTACK_TIMEOUT_MS=20000
# Retry attempts for transient fetch failures
BEVSTACK_FETCH_RETRIES=2
# User-Agent for fetch
BEVSTACK_USER_AGENT="Mozilla/5.0 (Macintosh; Intel Mac OS X 14_5) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/126.0.0.0 Safari/537.36"
# Max HTML bytes per fetch
BEVSTACK_MAX_HTML_SIZE_BYTES=2000000

# --- Thresholds (0–100) ---
# Hard threshold for Privacy/Terms
BEVSTACK_PASS_THRESHOLD=80
# Softer threshold for FAQ
BEVSTACK_FAQ_SOFT_PASS=60

# --- Section tolerance (how many missing sections still pass) ---
# Privacy: allow up to 1 missing section
BEVSTACK_ALLOW_MISSING_PRIVACY=1
# Terms: allow up to 2 missing sections
BEVSTACK_ALLOW_MISSING_TERMS=2
# FAQ: typically strict (0)
BEVSTACK_ALLOW_MISSING_FAQ=0

# --- Spellcheck ---
# Enable/disable spellcheck (true/false)
BEVSTACK_ENABLE_SPELLCHECK=true
# Extra allowlist terms (comma-separated), e.g. brand/industry words
# Example: "bevstack,shopify,sku,añejo,cristalino,reposado"
BEVSTACK_SPELL_WHITELIST_APPEND=""

# --- Discovery tails (per type, prepend/append lists) ---
# You can extend candidate tails without code changes.
# Defaults already include Shopify routes like /policies/privacy-policy and /policies/terms-of-service.
BEVSTACK_AUDITOR_PRIVACY_TAILS_PREPEND=""
BEVSTACK_AUDITOR_PRIVACY_TAILS_APPEND=""
BEVSTACK_AUDITOR_TERMS_TAILS_PREPEND=""
BEVSTACK_AUDITOR_TERMS_TAILS_APPEND=""
BEVSTACK_AUDITOR_FAQ_TAILS_PREPEND=""
BEVSTACK_AUDITOR_FAQ_TAILS_APPEND=""

# --- (Optional) JSON overrides (advanced) ---
# If you want to fully replace required sections per type:
# Example:
# BEVSTACK_AUDITOR_REQUIRED_SECTIONS_JSON='{"privacy":["personal information","cookies","contact","data security","your rights"],"terms":["limitation of liability","governing law","jurisdiction","returns","refunds","shipping"],"faq":["questions","answers"]}'
BEVSTACK_AUDITOR_REQUIRED_SECTIONS_JSON=""

# (Legacy / optional) If your loader maps TAILS_JSON you can use it,
# but the recommended way is PREPEND/APPEND above.
# Example:
# BEVSTACK_AUDITOR_TAILS_JSON='{"privacy":["privacy","privacy-policy","policies/privacy-policy"],"terms":["terms","terms-of-service","policies/terms-of-service"],"faq":["faq","support","help"]}'
BEVSTACK_AUDITOR_TAILS_JSON=""